---
import Base from "../../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const districts = [
    { slug: 'pattaya-beach' },
    { slug: 'jomtien' },
    { slug: 'naklua' }
  ];
  return districts.map(district => ({
    params: { slug: district.slug },
    props: { slug: district.slug }
  }));
}

const { slug } = Astro.props;
const names:any = {"pattaya-beach":"Pattaya Beach","jomtien":"Jomtien","naklua":"Naklua"};
const name = names[slug] ?? slug;
---
<Base lang="th" title={`${name} – เขตในพัทยา`} description={`ข้อมูลเกี่ยวกับ ${name} ในพัทยา`}>
  <section class="prose"><h1>{name}</h1>
    <p>{name} เป็นโซนยอดนิยมในพัทยา</p>
    <p><a class="underline" href="/th/properties/">ดูทรัพย์ใน {name}</a></p>
  </section>
</Base>

---
import Base from "../../layouts/BaseLayout.astro";
import common from "../../i18n/th/common.json";
import Hero from "../../components/home/Hero.astro";
import Section from "../../components/home/Section.astro";
import PropertyGrid from "../../components/home/PropertyGrid.astro";
import { loadProps } from "../../lib/loadProps";
import ServiceCard from "../../components/home/ServiceCard";
import { Home, MapPin, Handshake } from "lucide-react";
const featured = (await loadProps('th')).slice(0, 6);
---
<Base lang="th" title="Weib-Coding – อสังหาฯ พัทยา" description="ขาย · เช่า · บริการ ที่พัทยา ประเทศไทย">
  <div class="container section pt-6">
    <Hero locale="th" title={common.heroTitle} subtitle={common.heroSubtitle} image="/images/hero/th.jpg" />
  </div>
  <Section title="ทรัพย์ล่าสุด" subtitle="ค้นหาทรัพย์ใหม่ล่าสุดของเราในพัทยา">
    <PropertyGrid items={featured} />
    <div class="mt-6"><a class="underline" href="/th/properties/">ดูทรัพย์ทั้งหมด</a></div>
  </Section>
  <Section title="บริการของเรา" subtitle="บริการครบวงจรสำหรับอสังหาฯ ของคุณ">
    <div class="grid md:grid-cols-3 gap-6">
      <ServiceCard client:load icon={Home} title="ขายอสังหาฯ" desc="ทำการตลาดอย่างมืออาชีพด้วยกลยุทธ์ทันสมัย" />
      <ServiceCard client:load icon={MapPin} title="ให้คำปรึกษาทำเล" desc="หาโซนที่เหมาะสมสำหรับความต้องการของคุณ" />
      <ServiceCard client:load icon={Handshake} title="บริการครบวงจร" desc="ตั้งแต่ค้นหาจนปิดการขาย – เราดูแลให้" />
    </div>
  </Section>
</Base>

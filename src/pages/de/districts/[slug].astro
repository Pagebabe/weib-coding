---
import Base from "../../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const districts = [
    { slug: 'pattaya-beach' },
    { slug: 'jomtien' },
    { slug: 'naklua' }
  ];
  return districts.map(district => ({
    params: { slug: district.slug },
    props: { slug: district.slug }
  }));
}

const { slug } = Astro.props;
const titleMap:Record<string,string> = {
  "pattaya-beach":"Pattaya Beach",
  "jomtien":"Jomtien",
  "naklua":"Naklua"
};
const name = titleMap[slug] ?? slug;
---
<Base lang="de" title={`${name} â€“ Stadtteil in Pattaya`} description={`Informationen zu ${name} in Pattaya.`}>
  <section class="prose">
    <h1>{name}</h1>
    <p>{name} ist einer der gefragten Bereiche in Pattaya.</p>
    <p><a class="underline" href="/de/properties/">Immobilien in {name} anzeigen</a></p>
  </section>
</Base>

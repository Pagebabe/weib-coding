---
import Base from "../../layouts/BaseLayout.astro";
import common from "../../i18n/de/common.json";
import { loadProps } from "../../lib/loadProps";

const featuredProps = await loadProps('de');
const latestProps = featuredProps.slice(0, 3);
---
<Base lang="de" title="Weib-Coding – Immobilien in Pattaya" description="Professionelle Immobilienberatung in Pattaya. Villen, Condos, Häuser und Apartments zum Verkauf und zur Miete. Deutschsprachiger Service.">
  <!-- Hero Section -->
  <section class="text-center py-16 bg-gradient-to-br from-blue-50 to-white">
    <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
      {common.heroTitle}
    </h1>
    <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
      {common.heroSubtitle}
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="/de/properties/" class="bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 transition-colors">
        Immobilien finden
      </a>
      <a href="/de/services/" class="border border-blue-600 text-blue-600 px-8 py-3 rounded-lg hover:bg-blue-50 transition-colors">
        Unser Service
      </a>
    </div>
  </section>

  <!-- Featured Properties -->
  <section class="py-16">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Aktuelle Angebote</h2>
      <p class="text-gray-600">Entdecken Sie unsere neuesten Immobilien in Pattaya</p>
    </div>
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {latestProps.map(prop => (
        <a href={prop.url} class="block group">
          <div class="bg-white rounded-xl shadow-sm border overflow-hidden hover:shadow-lg transition-shadow">
            <img src={prop.cover || '/images/placeholder.jpg'} alt={prop.title} class="w-full h-48 object-cover" />
            <div class="p-6">
              <h3 class="font-semibold text-lg mb-2 group-hover:text-blue-600 transition-colors">
                {prop.title}
              </h3>
              <p class="text-gray-600 text-sm mb-3">{prop.location} · {prop.type} · {prop.bedrooms} BR</p>
              <p class="text-2xl font-bold text-blue-600">
                {new Intl.NumberFormat('de-DE').format(prop.price_thb)} THB
              </p>
            </div>
          </div>
        </a>
      ))}
    </div>
    <div class="text-center mt-8">
      <a href="/de/properties/" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors">
        Alle Immobilien anzeigen
      </a>
    </div>
  </section>

  <!-- Services -->
  <section class="py-16 bg-gray-50">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Unsere Services</h2>
      <p class="text-gray-600">Vollservice für Ihre Immobilienbedürfnisse</p>
    </div>
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <div class="bg-white p-8 rounded-xl shadow-sm">
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-3">Immobilienverkauf</h3>
        <p class="text-gray-600">Professionelle Vermarktung Ihrer Immobilie mit modernen Marketingstrategien.</p>
      </div>
      <div class="bg-white p-8 rounded-xl shadow-sm">
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-3">Standortberatung</h3>
        <p class="text-gray-600">Finden Sie den perfekten Standort in Pattaya für Ihre Bedürfnisse.</p>
      </div>
      <div class="bg-white p-8 rounded-xl shadow-sm">
        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-3">Vollservice</h3>
        <p class="text-gray-600">Von der Suche bis zum Vertragsabschluss - wir begleiten Sie durch den gesamten Prozess.</p>
      </div>
    </div>
  </section>
</Base>

---
import Base from "../../../layouts/BaseLayout.astro";
import list from "../../../content/properties/_seed.de.json";
const slug = Astro.params.slug;
const p = list.find(x => x.slug === slug);
if (!p) throw new Error("Property not found: " + slug);
---
<Base lang="de" title={`${p.title} – Immobilien in Pattaya`} description={p.description}>
  <article class="prose max-w-none">
    <h1>{p.title}</h1>
    <p class="text-sm text-gray-600">{p.location} · {p.type} · {p.bedrooms} Schlafzimmer</p>
    <div class="grid md:grid-cols-2 gap-4 my-6">
      {p.images.map(src => <img src={src} alt={p.title} class="w-full rounded-lg" />)}
    </div>
    <h2>Daten & Fakten</h2>
    <ul>
      <li>Preis: {new Intl.NumberFormat('de-DE').format(p.price_thb)} THB</li>
      <li>Wohnfläche: {p.living_sqm} m² · Grundstück: {p.land_sqm} m²</li>
      <li>Eigentum: {p.ownership}</li>
      <li>Features: {p.features.join(", ")}</li>
    </ul>
    <h2>Beschreibung</h2>
    <p>{p.body}</p>
  </article>
</Base>

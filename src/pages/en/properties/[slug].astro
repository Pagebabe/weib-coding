---
import Base from "../../../layouts/BaseLayout.astro";
import { loadPropBySlug, loadProps } from "../../../lib/loadProps";

export async function getStaticPaths() {
  const slugs = [
    'park-villa-privatpool',
    'luxury-condo-beach',
    'family-house-naklua',
    'budget-studio-jomtien'
  ];
  return slugs.map(slug => ({
    params: { slug },
    props: { slug }
  }));
}

const { slug } = Astro.props;
const p = await loadPropBySlug('en', slug);
if (!p) throw new Error("Property not found: " + slug);

// SEO-optimized Title and Description
const seoTitle = `${p.title} - ${p.type} in ${p.location} | Weib-Coding Real Estate Pattaya`;
const seoDescription = `${p.title} - ${p.type} in ${p.location}, Thailand. ${p.bedrooms} bedrooms, ${p.living_sqm ? p.living_sqm + 'm² living area' : ''} for ${new Intl.NumberFormat('en-US').format(p.price_thb)} THB. Professional real estate service in Pattaya.`;

const jsonLd = {
  "@context":"https://schema.org",
  "@type":"RealEstateListing",
  "name": p.title,
  "url": "https://weib-coding.vercel.app" + p.url,
  "image": p.images || [],
  "description": p.description || p.title,
  "offers": {
    "@type":"Offer",
    "priceCurrency":"THB",
    "price": String(p.price_thb || 0),
    "availability":"https://schema.org/InStock"
  },
  "address": {
    "@type":"PostalAddress",
    "addressLocality": p.location || "Pattaya",
    "addressCountry": "TH"
  },
  "category": p.type
};

const og = new URL('/api/og', Astro.site);
og.searchParams.set('title', p.title);
if (p.price_thb) og.searchParams.set('price', String(p.price_thb));
if (p.location)  og.searchParams.set('loc', p.location);
if (p.images?.[0] || p.cover) og.searchParams.set('img', new URL(p.images?.[0] ?? p.cover!, Astro.site).toString());

const breadcrumbs = {
  "@context":"https://schema.org","@type":"BreadcrumbList",
  "itemListElement":[
    { "@type":"ListItem","position":1,"name":"Home","item":"https://weib-coding.vercel.app/en/" },
    { "@type":"ListItem","position":2,"name":"Properties","item":"https://weib-coding.vercel.app/en/properties/" },
    { "@type":"ListItem","position":3,"name": p.title, "item":"https://weib-coding.vercel.app"+p.url }
  ]
};
---
<Base lang="en" title={seoTitle} description={seoDescription} image={og.toString()}>
  <script type="application/ld+json">{JSON.stringify(jsonLd)}</script>
  <script type="application/ld+json">{JSON.stringify(breadcrumbs)}</script>
  <article class="prose max-w-none">
    <h1>{p.title}</h1>
    <p class="text-sm text-gray-600">{p.location} · {p.type} · {p.bedrooms} Bedrooms</p>
    <div class="grid md:grid-cols-2 gap-4 my-6">
      {p.images?.map(src => <img src={src} alt={p.title} class="w-full rounded-lg" />)}
    </div>
    <h2>Details & Facts</h2>
    <ul>
      <li>Price: {new Intl.NumberFormat('en-US').format(p.price_thb)} THB</li>
      {p.living_sqm && <li>Living Area: {p.living_sqm} m²</li>}
      {p.land_sqm && <li>Land Area: {p.land_sqm} m²</li>}
      {p.ownership && <li>Ownership: {p.ownership}</li>}
      {p.features?.length ? <li>Features: {p.features.join(", ")}</li> : null}
    </ul>
    {p.body && <>
      <h2>Description</h2>
      <p set:html={p.body.replace(/\n/g,'<br/>')}></p>
    </>}
  </article>
</Base>

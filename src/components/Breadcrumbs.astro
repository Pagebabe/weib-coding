---
export interface Props {
  items: Array<{
    label: string;
    href?: string;
  }>;
  locale?: 'de' | 'en' | 'th';
}

const { items, locale = 'de' } = Astro.props;
---

<nav class="breadcrumbs" aria-label="Breadcrumb">
  <ol class="flex items-center space-x-2 text-sm" style="color: var(--color-muted);">
    <li>
      <a 
        href={`/${locale}/`} 
        class="transition-colors hover:opacity-80"
        style="color: var(--color-primary);"
      >
        {locale === 'de' ? 'Start' : locale === 'en' ? 'Home' : 'หน้าแรก'}
      </a>
    </li>
    {items.map((item, index) => (
      <>
        <li class="flex items-center">
          <svg 
            class="w-4 h-4 mx-1" 
            fill="currentColor" 
            viewBox="0 0 20 20"
            style="color: var(--color-muted);"
          >
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
        </li>
        <li>
          {item.href ? (
            <a 
              href={item.href} 
              class="transition-colors hover:opacity-80"
              style="color: var(--color-primary);"
            >
              {item.label}
            </a>
          ) : (
            <span style="color: var(--color-text);" class="font-medium">
              {item.label}
            </span>
          )}
        </li>
      </>
    ))}
  </ol>
</nav>

<style>
  .breadcrumbs {
    margin-bottom: var(--space-md);
  }
</style>

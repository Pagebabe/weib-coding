---
import { Button } from "../ui/button";
import ImageBanner from '../ui/ImageBanner.tsx';

const { title, subtitle, images, locale='de', ctaPrimary, ctaSecondary } = Astro.props;
const link = (l:string) => `/${locale}/${l}/`;

// Default images if none provided
const defaultImages = [
  '/images/hero/pattaya-beach-1.jpg',
  '/images/hero/pattaya-beach-2.jpg',
  '/images/hero/pattaya-beach-3.jpg'
];

const heroImages = images || defaultImages;
---
<section class="relative overflow-hidden rounded-3xl md:rounded-[2rem] border" style="border-color: var(--card-border);">
  <ImageBanner 
    client:load
    images={heroImages}
    title={title}
    subtitle={subtitle}
    height="xl"
    showIndicators={true}
    autoPlay={true}
    interval={6000}
  />
  <div class="absolute inset-0 flex items-end pointer-events-none">
    <div class="container pb-8 pointer-events-auto">
      <div class="mt-6 flex gap-3">
        <a href={link('properties')}>
          <Button 
            size="lg" 
            style={{
              backgroundColor: 'var(--color-primary)',
              borderColor: 'var(--color-primary)'
            }}
          >
            {ctaPrimary || 'Immobilien finden'}
          </Button>
        </a>
        <a href={link('contact')}>
          <Button 
            size="lg" 
            variant="outline" 
            class="bg-white/90 backdrop-blur"
            style={{
              borderColor: 'white',
              color: 'var(--color-text)'
            }}
          >
            {ctaSecondary || 'Anfrage senden'}
          </Button>
        </a>
      </div>
    </div>
  </div>
</section>

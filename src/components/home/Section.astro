---
const { title, subtitle } = Astro.props;
---
<section class="section">
  <div class="container">
    {title && <h2 class="text-2xl font-bold mb-4" style="color: var(--color-text);">{title}</h2>}
    {subtitle && <p class="mb-6" style="color: var(--color-muted);">{subtitle}</p>}
    <div>
      <slot />
    </div>
  </div>
</section>

---
import NavBar from "../components/NavBar.tsx";
import { Analytics } from '@vercel/analytics/react';
import { generateSEOTags, generateStructuredData } from '../lib/seo.ts';
import { ToastProvider } from '../components/ui/toast-provider';
import WebVitalsReporter from '../components/WebVitalsReporter.tsx';

const {
  title,
  description,
  lang = "de",
  image,
  url = Astro.url.href,
  type = "website",
  publishedTime,
  modifiedTime,
  author,
  section,
  tags = [],
  property,
  district,
  organization
} = Astro.props;

// Build-Stamp für Deployment-Verifikation
const COMMIT = import.meta.env.VERCEL_GIT_COMMIT_SHA ?? import.meta.env.GITHUB_SHA ?? '';
const BUILT_AT = new Date().toISOString();

const seo = generateSEOTags({
  title,
  description,
  image,
  url,
  locale: lang,
  type,
  publishedTime,
  modifiedTime,
  author,
  section,
  tags
});

const structuredData = generateStructuredData({
  ...seo,
  property,
  district,
  organization
});

const year = new Date().getFullYear();
---
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{seo.title}</title>
    <meta name="description" content={seo.description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={seo.type} />
    <meta property="og:url" content={seo.url} />
    <meta property="og:title" content={seo.title} />
    <meta property="og:description" content={seo.description} />
    <meta property="og:image" content={seo.image} />
    <meta property="og:locale" content={seo.locale} />
    {seo.publishedTime && <meta property="article:published_time" content={seo.publishedTime} />}
    {seo.modifiedTime && <meta property="article:modified_time" content={seo.modifiedTime} />}
    {seo.author && <meta property="article:author" content={seo.author} />}
    {seo.section && <meta property="article:section" content={seo.section} />}
    {seo.tags.map(tag => <meta property="article:tag" content={tag} />)}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={seo.url} />
    <meta property="twitter:title" content={seo.title} />
    <meta property="twitter:description" content={seo.description} />
    <meta property="twitter:image" content={seo.image} />

    <!-- Build-Stamp für Deployment-Verifikation -->
    <meta name="x-build-commit" content={COMMIT} />
    <meta name="x-build-time" content={BUILT_AT} />

    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content={seo.author} />
    <meta name="keywords" content={seo.tags.join(', ')} />
    <link rel="canonical" href={seo.url} />
    
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="/styles/visual-design.css" />
    <!-- Preconnects -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://www.google-analytics.com">
    
    <!-- Preload critical fonts -->
    <link rel="preload" href="https://fonts.gstatic.com/s/inter/v12/UcCO3FwrK3iLTeHuS_fvQtMwCp50KnMw2boKoduKmMEVuLyfAZ9hiJ-Ek-_EeA.woff2" as="font" type="font/woff2" crossorigin>
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  </head>
         <body class="min-h-screen fade-in" style="background-color: var(--bg); color: var(--color-text);">
    <ToastProvider client:load>
      <NavBar client:load locale={lang} />
      <main class="container py-8 slide-up">
        <slot />
      </main>
      <WebVitalsReporter client:load />
    </ToastProvider>
    <footer class="border-t" style="border-color: var(--card-border);">
      <div class="container py-10 text-sm grid md:grid-cols-4 gap-6">
        <div>
          <div class="font-semibold text-lg" style="color: var(--color-text);">Weib-Coding</div>
          <div class="mt-2" style="color: var(--color-muted);">Pattaya · Thailand</div>
        </div>
        <div class="space-y-2">
          <div class="font-semibold" style="color: var(--color-text);">Site</div>
          <a class="block transition-colors hover:opacity-80" style="color: var(--color-muted);" href="/de/">Start</a>
          <a class="block transition-colors hover:opacity-80" style="color: var(--color-muted);" href="/de/properties/">Immobilien</a>
          <a class="block transition-colors hover:opacity-80" style="color: var(--color-muted);" href="/de/services/">Service</a>
          <a class="block transition-colors hover:opacity-80" style="color: var(--color-muted);" href="/de/districts/">Stadtteile</a>
        </div>
        <div class="space-y-2">
          <div class="font-semibold" style="color: var(--color-text);">Unternehmen</div>
          <a class="block transition-colors hover:opacity-80" style="color: var(--color-muted);" href="/de/about/">Über uns</a>
          <a class="block transition-colors hover:opacity-80" style="color: var(--color-muted);" href="/de/contact/">Kontakt</a>
        </div>
        <div class="space-y-2">
          <div class="font-semibold" style="color: var(--color-text);">Rechtliches</div>
          <a class="block transition-colors hover:opacity-80" style="color: var(--color-muted);" href="/de/legal/impressum/">Impressum</a>
          <a class="block transition-colors hover:opacity-80" style="color: var(--color-muted);" href="/de/legal/privacy/">Datenschutz</a>
        </div>
      </div>
      <div class="border-t text-center text-xs py-4" style="border-color: var(--card-border); color: var(--color-muted);">© 2025 Weib-Coding</div>
    </footer>
    <Analytics />
    
    <!-- Google Analytics 4 (optional) -->
    <script type="text/partytown">
      gtag('config', 'GA_MEASUREMENT_ID', {
        page_title: document.title,
        page_location: window.location.href
      });
    </script>
    
    <!-- Performance Monitoring -->
    <script>
      // Core Web Vitals Monitoring (optional)
      if (typeof window !== 'undefined' && 'performance' in window) {
        // Basic performance monitoring
        window.addEventListener('load', () => {
          const perfData = performance.getEntriesByType('navigation')[0];
          if (perfData) {
            console.log('Page Load Time:', perfData.loadEventEnd - perfData.loadEventStart, 'ms');
          }
        });
      }
    </script>
  </body>
</html>
